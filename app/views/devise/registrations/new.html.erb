<div class="contents_wrapper">
  <div class="contents">
    <div class="form_wrapper">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h1 class="student_manage_title">新規登録</h1>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form_parts">
          <%= f.label "名前" %><br />
          <%= f.text_field :name, autofocus: true, placeholder: "例)田中太郎" %>
        </div>

        <div class="form_parts">
          <%= f.label "年組番号" %>
          <div class="input_student_number">
            <div class="student_num_select">
              <%= f.select :grade, 1..3, {include_blank: "---"} %>
              <p>年</p>
            </div>
            <div class="student_num_select">
              <%= f.select :team, 1..5, {include_blank: "---"} %>
              <p>組</p>
            </div>
            <div class="student_num_select">
              <%= f.select :number, 1..50, {include_blank: "---"} %>
              <p>番</p>
            </div>
          </div>
        </div>

        <div class="form_parts">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email" %>
        </div>

        <div class="form_parts">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="form_parts">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="student_manage_action">
          <%= f.submit "新規登録", class: "student_manage_btn" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>